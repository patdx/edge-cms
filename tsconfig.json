{
	"compilerOptions": {
		"noEmit": true,
		"target": "es2020",
		"module": "ESNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"verbatimModuleSyntax": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"types": ["vite/client"],
		"allowJs": true,
		"checkJs": true
	},
	"include": ["src/**/*"]
}
